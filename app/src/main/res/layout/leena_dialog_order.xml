<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <include layout="@layout/layout_gard" />
<!-- done -->

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/appCompatCheckBox2"
        style="@style/checkbox_style"
        android:layout_height="wrap_content"
        android:text="@string/order_by_number"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_90"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_05"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_10" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/appCompatCheckBox3"
        style="@style/checkbox_style"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/Order_By_admission_number"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_25"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_90"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_05"
        app:layout_constraintTop_toBottomOf="@+id/appCompatCheckBox2" />


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/appCompatCheckBox4"
        style="@style/checkbox_style"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/Order_By_roll_Number"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_35"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_90"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_05"
        app:layout_constraintTop_toBottomOf="@+id/appCompatCheckBox3" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/appCompatCheckBox"
        style="@style/checkbox_style"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/name"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_45"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_90"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_05"
        app:layout_constraintTop_toBottomOf="@+id/appCompatCheckBox4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eighty_two"
            android:text="@string/apply"
            android:background="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="@+id/appCompatCheckBox"
            app:layout_constraintStart_toStartOf="@+id/appCompatCheckBox"
            app:layout_constraintTop_toBottomOf="@+id/appCompatCheckBox"
            android:textColor="@color/white_"/>

</androidx.constraintlayout.widget.ConstraintLayout>