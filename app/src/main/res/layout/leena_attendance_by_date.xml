<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/acsp_select_class"
        android:layout_width="0dp"
        style="@style/spinner_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/acsp_select_section"
        android:layout_width="0dp"
        style="@style/spinner_style2"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_class"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_class"
        app:layout_constraintTop_toBottomOf="@+id/acsp_select_class" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_shape"
        android:text="@string/continue_"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_section"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_section"
        app:layout_constraintTop_toBottomOf="@+id/actv_Date" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_Date"
        android:layout_width="0dp"
        android:layout_height="@dimen/fifty_five"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/class_date"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_section"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_section"
        app:layout_constraintTop_toBottomOf="@+id/acsp_select_section" />


</androidx.constraintlayout.widget.ConstraintLayout>