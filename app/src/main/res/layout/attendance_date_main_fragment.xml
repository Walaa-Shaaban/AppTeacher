<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--done  -->
    <include layout="@layout/toolbar"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_marginTop="60dp"
        android:id="@+id/acsp_select_class_att"
        style="@style/spinner_style"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/acsp_select_section_att"
        style="@style/spinner_style2"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_class_att"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_class_att"
        app:layout_constraintTop_toBottomOf="@+id/acsp_select_class_att" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_continue_att"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_shape"
        android:text="@string/continue_"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_section_att"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_section_att"
        app:layout_constraintTop_toBottomOf="@+id/actv_Date_att" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_Date_att"
        android:layout_width="0dp"
        android:layout_height="@dimen/fifty_five"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/class_date"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_section_att"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_section_att"
        app:layout_constraintTop_toBottomOf="@+id/acsp_select_section_att" />


</androidx.constraintlayout.widget.ConstraintLayout>