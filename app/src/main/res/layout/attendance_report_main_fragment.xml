<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--done  -->


    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/acsp_select_section"
        style="@style/spinner_style2"
        android:layout_width="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/actv_label_year"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_class"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_class" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/acsp_select_class"
        style="@style/spinner_style"
        android:layout_width="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/actv_label_section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_label_class"
        style="@style/textview_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/eight_dp"
        android:text="@string/class_title"
        app:layout_constraintBottom_toTopOf="@+id/acsp_select_class"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_class" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/acsp_select_month"
        style="@style/spinner_style2"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_year"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_year"
        app:layout_constraintTop_toBottomOf="@+id/actv_label_month" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_label_month"
        style="@style/textview_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/eight_dp"
        android:text="@string/month"
        app:layout_constraintBottom_toTopOf="@+id/acsp_select_month"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_month" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_shape3"
        android:text="@string/continue_"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_month"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_month"
        app:layout_constraintTop_toBottomOf="@+id/acsp_select_month" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/acsp_select_year"
        style="@style/spinner_style2"
        android:layout_width="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/actv_label_month"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_section"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_section" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_label_year"
        style="@style/textview_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/eight_dp"
        android:text="@string/year"
        app:layout_constraintBottom_toTopOf="@+id/acsp_select_year"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_year" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_label_section"
        style="@style/textview_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/eight_dp"
        android:text="@string/section"
        app:layout_constraintBottom_toTopOf="@+id/acsp_select_section"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_section" />

</androidx.constraintlayout.widget.ConstraintLayout>