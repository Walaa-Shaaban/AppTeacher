<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homework.add_new.HomeworkAddNewFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_class"
                style="@style/standard_title"
                android:text="@string/class_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/fl_class"
                style="@style/frame_layout_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_class">

                <Spinner
                    android:id="@+id/sp_class"
                    style="@style/spinner_style_stroked" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_section"
                style="@style/standard_title"
                android:text="@string/section"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fl_class" />

            <FrameLayout
                android:id="@+id/fl_section"
                style="@style/frame_layout_style"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_section">

                <Spinner
                    android:id="@+id/sp_section"
                    style="@style/spinner_style_stroked" />

            </FrameLayout>


            <TextView
                android:id="@+id/tv_subject"
                style="@style/standard_title"
                android:text="subject"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fl_class" />

            <FrameLayout
                android:id="@+id/fl_subject"
                style="@style/frame_layout_style"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_section">

                <Spinner
                    android:id="@+id/sp_subject"
                    style="@style/spinner_style_stroked" />

            </FrameLayout>

            <TextView
                style="@style/standard_title"
                android:text="Homework Date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fl_class" />

            <EditText
                android:id="@+id/homework_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/standard_title"
                android:text="Submit Date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fl_class" />

            <EditText
                android:id="@+id/submit_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/standard_title"
                android:text="Message"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fl_class" />

            <EditText
                android:id="@+id/msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/add_new_homework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:text="Add New Homework"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="474dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>