<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/acsp_select_class"
        style="@style/spinner_style"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/acsp_select_section"
        style="@style/spinner_style2"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_class"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_class"
        app:layout_constraintTop_toBottomOf="@+id/acsp_select_class" />


    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/acsp_select_year"
        style="@style/spinner_style2"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_section"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_section"
        app:layout_constraintTop_toBottomOf="@+id/acsp_select_section" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/acsp_select_month"
        style="@style/spinner_style2"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_year"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_year"
        app:layout_constraintTop_toBottomOf="@+id/acsp_select_year" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_shape3"
        android:text="@string/continue_"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/acsp_select_month"
        app:layout_constraintStart_toStartOf="@+id/acsp_select_month"
        app:layout_constraintTop_toBottomOf="@+id/acsp_select_month" />
</androidx.constraintlayout.widget.ConstraintLayout>