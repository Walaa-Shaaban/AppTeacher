<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_news_details"
        layout="@layout/toolbar">

    </include>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_news_date2"
        android:layout_width="56dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:text="@string/class_date"
        app:layout_constraintEnd_toStartOf="@+id/aciv_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aciv_pic" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/aptv_news2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lines="5"
        android:text="@string/text"
        app:layout_constraintEnd_toStartOf="@+id/aciv_pic"
        app:layout_constraintStart_toStartOf="@+id/actv_label_news2"
        app:layout_constraintTop_toBottomOf="@+id/actv_label_news2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_label_news2"
        style="@style/standard_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="8dp"
        android:text="@string/news"
        android:textSize="@dimen/twenty_four_sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/aciv_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actv_news_date2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aciv_pic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

</androidx.constraintlayout.widget.ConstraintLayout>