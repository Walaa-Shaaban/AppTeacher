<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bot_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/shap_bott</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#ffffff</item>


    </style>


    <!-- Using Font Awesome -->
    <style name="font_awesome_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/ten_dp</item>
        <item name="android:fontFamily">@font/first_file</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:padding">@dimen/fifteen_dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="CustomCardView" parent="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:clipToPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">@color/white</item>

    </style>


    <style name="font_below_font_awesome" parent="font_awesome_textview_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="font_awesome_textview_style_rectangle_cardview" parent="font_awesome_textview_style">
        <item name="android:layout_marginBottom">@dimen/ten_dp</item>
        <item name="android:layout_marginTop">@dimen/ten_dp</item>
        <item name="android:layout_marginStart">@dimen/twenty_dp</item>
    </style>

    <style name="standard_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/sixteen_dp</item>
        <item name="android:layout_marginTop">@dimen/sixteen_dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="spinner_style_stroked" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/twenty_dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textAlignment">viewStart</item>
    </style>


    <style name="frame_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/five_dp</item>
        <item name="android:layout_marginTop">@dimen/sixteen_dp</item>
        <item name="android:elevation">@dimen/five_dp</item>
        <item name="android:background">@drawable/strock_spinner</item>
        <item name="android:layout_marginEnd">@dimen/five_dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="RobotoCalendarMonthText">
        <item name="android:textColor">#ffffff</item>
        <!--<item name="android:textColor">@color/myPrimaryColor</item>-->
    </style>

    <style name="RobotoCalendarMonthArrow">
        <item name="android:tint">#030303</item>
        <!--<item name="android:tint">@color/myPrimaryColor</item>-->
    </style>

    <style name="RobotoCalendarDayOfTheWeekText">
        <item name="android:textSize">@dimen/roboto_calendar_day_of_week_font</item>
        <item name="android:textColor">@color/roboto_calendar_day_of_the_month_font</item>
    </style>

    <style name="RobotoCalendarDayOfTheMonthText">
        <item name="android:textSize">@dimen/roboto_calendar_day_of_the_month_font</item>
        <item name="android:textColor">@color/roboto_calendar_day_of_the_month_font</item>
    </style>

    <style name="edittext_default">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">@dimen/ten_dp</item>
        <item name="android:elevation">@dimen/five_dp</item>
        <item name="android:fontFamily">@font/first_file</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:hint">to enter here</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="textview_default">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">@dimen/ten_dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/first_file</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/amdp_dark_gray</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:hint">to enter here</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="spinner_style2">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="view_color">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fifteen_dp</item>
        <item name="android:background">@drawable/circle_red</item>
        <item name="android:layout_margin">@dimen/five_dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="checkbox_style" parent="textview_default">
        <item name="android:hint">""</item>
    </style>


    <style name="bottonst">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="MenuButtonsSmall">
        <item name="fab_size">normal</item>
        <item name="fab_colorNormal">#3975c4</item>
        <item name="fab_colorPressed">#3975c4</item>
        <item name="fab_colorRipple">#3975c4</item>
    </style>


    <style name="MenuButtonsSmall.Red">
        <item name="fab_size">normal</item>
        <item name="fab_colorNormal">#e7171d</item>
        <item name="fab_colorPressed">#e7171d</item>
        <item name="fab_colorRipple">#e7171d</item>
    </style>

    <style name="MenuButtonsSmall.Green">
        <item name="fab_colorNormal">#0acf12</item>
        <item name="fab_colorPressed">#0acf12</item>
        <item name="fab_colorRipple">#0acf12</item>
    </style>

    <style name="MenuButtonsSmall.orange">
        <item name="fab_colorNormal">#ed850d</item>
        <item name="fab_colorPressed">#ed850d</item>
        <item name="fab_colorRipple">#ed850d</item>
    </style>


   
    <style name="recyc">
        <item name="android:background">@drawable/shaperecycle</item>
    </style>
    <!--    Calendar-->
    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_dark</item>
    </style>

</resources>
